---
import { Image } from "astro:assets";
const {property} = Astro.props
---

<div class="lg:w-1/3 px-2.5 mb-5">
  <article class="rounded-lg bg-white shadow-lg p-5 h-full flex flex-col items-start justify-between">
    <div>
      <Image class="w-full object-cover aspect-2/3 mb-5" alt="" src={property.featuredImage.node.sourceUrl} width={600} height={400} />
      <h2 class="text-xl font-bold mb-5">{property.title}</h2>
      <p class="mb-6">${property.propertyFields.price}</p>
    </div>
    <a class="inline-block bg-slate-600 text-white rounded-md px-6 py-3 hover:bg-slate-500" href={`/properties/${property.slug}`}>Read More</a>
  </article>
</div>